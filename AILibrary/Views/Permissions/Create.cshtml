@model AILibrary.Models.Permissions.Permission

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string UsersDDLElements = "UsersList";
    string UsersDDLOnFormName = "UsersDDL";
}

@{
    SelectList selectUserList = null;
    if (ViewData[UsersDDLElements] != null)
    {
        selectUserList = new SelectList(
    (IList<SelectListItem>)ViewData[UsersDDLElements], "Value", "Text");
    }
}

<h2>Add permission to your library for user</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Permission</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.User.Email, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList(UsersDDLOnFormName, selectUserList)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
