@model IEnumerable<AILibrary.Models.Books.BookCopy>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Book copies list</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm())
{
    <table>
        <tr>
            <td>Find by possesor name:</td>
            <td>@Html.TextBox("possesorNameSearchString")</td>
        </tr>
        <tr>
            <td>Find by borrower name:</td>
            <td> @Html.TextBox("currentlyNameSearchString")</td>
        </tr>
        <tr>
            <td> Find by author name:</td>
            <td> @Html.TextBox("nameSearchString")</td>
        </tr>
        <tr>
            <td>Find by title:</td>
            <td> @Html.TextBox("titleSearchString")</td>
        </tr>
        <tr>
            <td><input type="submit" value="Search" /></td>
        </tr>

    </table>
}

@Html.Partial("_BookCopiesList", Model)

