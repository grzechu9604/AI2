@model IEnumerable<AILibrary.Models.Books.Book>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Books list</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm())
{
    <table>
        <tr>
            <td> Find by author name:</td>
            <td> @Html.TextBox("nameSearchString")</td>
        </tr>
        <tr>
            <td>Find by title:</td>
            <td> @Html.TextBox("titleSearchString")</td>
        </tr>
        <tr>
            <td><input type="submit" value="Search" /></td>
        </tr>

    </table>
}
<table class="table">
    <tr>
        <th>
            @Html.ActionLink(Html.DisplayNameFor(model => model.AuthorName).ToString(), "Index", new { sortOrder = ViewBag.AuthorSortParam })
        </th>
        <th>
            @Html.ActionLink(@Html.DisplayNameFor(model => model.Title).ToString(), "Index", new { sortOrder = ViewBag.TitleSortParam })
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AuthorName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
